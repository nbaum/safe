{
  "manifest_version": 2,
  "name": "Safe",
  "version": "1.0",
  "description": "Password and secrets store",
  "icons": {
    "16": "icons/safe16.png",
    "24": "icons/safe24.png",
    "32": "icons/safe32.png",
    "48": "icons/safe48.png"
  },
  "browser_action": {
    "default_icon": "icons/safe24.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["framework.js", "actor.js"]
    }
  ],
  "options_ui": {
    "page": "settings.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}